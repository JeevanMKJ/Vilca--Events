<div class="columns is-multiline">
  <div class="column is-half login-card">
    <h2 class="page-title is-title is-size-4">Login to your account</h2>
    <form class="column form login-form">
      <div class="form-group field">
        <label class="label" for="email-login">Email</label>
        <p class="control has-icons-left">
          <input class="form-input input is-hovered is-small is-one-quarter" type="text" id="email-login" />
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </p>
      </div>
      <div class="form-group">
        <label class="label" for="password-login">Password</label>
        <p class="control has-icons-left">
          <input class="form-input input is-hovered is-small is-one-quarter" type="password" id="password-login" />
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>
      <div class="form-group">
        <button class="btn btn-primary button is-outlined is-hovered mt-3" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="column is-half login-card">
    <h2 class="page-title is-size-4">Create an account</h2>
    <form class="column form signup-form">
      <div class="form-group">
        <label class="label" for="username-signup">Username</label>
        <p class="control has-icons-left">
          <input class="form-input input is-hovered is-small is-one-quarter" type="text" id="username-signup" />
          <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>
        </p>
      </div>
      <div class="form-group">
        <label class="label" for="email-signup">Email</label>
        <p class="control has-icons-left">
          <input class="form-input input is-hovered is-small is-one-quarter" type="text" id="email-signup" />
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </p>
      </div>
      <div class="form-group">
        <label class="label" for="password-signup">Password</label>
        <p class="control has-icons-left">
          <input class="form-input input is-hovered is-small is-one-quarter" type="password" id="password-signup" />
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>
      <div class="form-group">
        <button class="btn btn-primary button is-outlined is-hovered mt-3" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>