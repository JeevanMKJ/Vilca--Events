{{#if loggedIn}}
  <form>

    <div class="columns card m-5 is-centered">
      <div class="card-content column is-two-thirds">
        <p class="is-size-2 is-flex is-justify-content-center">Create an Event</p>
        <p class="is-size-5 is-flex is-justify-content-center">Please fill out all fields</p>
        <label class="label mt-3">Enter a link to an image for your event
          <span class="has-text-danger">*</span></label>
        <input
          class="card-content input is-small"
          id="image"
          type="text"
          placeholder="Image Link"
        />
        <label class="label mt-2">Name of your event <span class="has-text-danger">*</span></label></label>
        <input
          class="card-content input is-small"
          id="title"
          type="text"
          placeholder="Event Title"
        />
        <label class="label mt-2">Date of the event <span class="has-text-danger">*</span></label></label>
        <input
          class="card-content input is-small"
          id="date"
          type="text"
          placeholder="MM/DD/YYYY"
        />
        <label class="label mt-2">Event Hours <span class="has-text-danger">*</span></label></label>
        <input
          class="card-content input is-small"
          id="time"
          type="text"
          placeholder="00:00"
        />
        <label class="label mt-2">A short description of your event <span class="has-text-danger">*</span></label></label>
        <textarea
          class="textarea input is-small"
          id="description"
          type="text"
          placeholder="Event Description"
        ></textarea>
        <label class="label mt-2">Where will the event take place - add a URL to link the venue location<span class="has-text-danger">*</span></label></label>
        <input
          class="card-content input is-small"
          id="location"
          type="text"
          placeholder="Location"
        />
        <label class="label mt-2">Contact Email <span class="has-text-danger">*</span></label></label>
        <input
          class="card-content input is-small"
          id="email"
          type="text"
          placeholder="email@email.com"
        />
        <label class="label mt-2">Social Media - add a URL to link your social<span class="has-text-danger">*</span></label></label>
        <input
          class="card-content input is-small"
          id="social"
          type="text"
          placeholder="Social"
        />
        <button class="button is-danger mt-3" id="createEvent">Submit <span class="has-text-danger">*</span></button></button>
      </div>
    </div>
  </form>
{{/if}}
<script src="/js/eventHandler.js"></script>