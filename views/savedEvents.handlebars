<h1>Hello! You made it!</h1>

{{#if mySavedEvents.length}}
<div id="saved-events-list">
  {{#each mySavedEvents as |event|}}
  <div class="card m-6">
    <div class="card-image">

      <figure class="image is-256x256">
        <img src="{{event.image}}" alt="Event image">
      </figure>
    </div>
    <div class="media-content p-2 has-text-centered">
      <p class="title is-1 p-2">{{event.title}}</p>
      <p class="subtitle is-4"></p>
      <div class="content p-2 is-size-5">
        <time>{{date}} at {{time}}</time>

        <br>
        <p class="upvotes">Votes for favorite: {{upvotes}}</p>
        <a class="is-size-6" more-info="{{id}}" href="/event/{{id}}">More info</a>
        <span class="control is-flex is-justify-content-right">
          <span class="icon is-large has-text-link">
            <i class="button fas fa-thumbs-up" upvote="{{id}}"
            id="like-button"></i>
          </span>
        </span>
      </div>
    </div>


    {{/each}}

    {{/if}}
  </div>
  <script src="/js/upvotehandler.js"></script>