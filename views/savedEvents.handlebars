{{#if events.length}}
<div id="saved-events-list">
  {{#each events as |event|}}
  <div class="card m-6">
    <div class="card-image">

      <figure class="image is-256x256">
        <img src={{event.dataValues.image}} alt="Event image">
      </figure>
    </div>
    <div class="media-content p-2 has-text-centered">
      <p class="title is-1 p-2">{{event.dataValues.title}}</p>
      <p class="subtitle is-4"></p>
      <div class="content p-2 is-size-5">
        <time>{{format_date event.dataValues.date}} at {{event.dataValues.time}}</time>

        <br>
        <p class="upvotes">Votes for favorite: {{event.dataValues.upvotes}}</p>
        <a class="is-size-6" more-info="{{event.dataValues.id}}" href="/event/{{event.dataValues.id}}">More info</a>
        <span class="control is-flex is-justify-content-right">
          <span class="icon is-large has-text-link">
            <i class="button fas fa-thumbs-up" upvote="{{event.dataValues.id}}"
            id="like-button"></i>
          </span>
        </span>
      </div>
    </div>


    {{/each}}
{{else}}
<h1>You have no saved events!</h1>
    {{/if}}

  </div>
  <script src="/js/upvotehandler.js"></script>